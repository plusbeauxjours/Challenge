{
  "compilerOptions": {
  "module": "commonjs",
  "declaration": true,
  "removeComments": true,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "allowSyntheticDefaultImports": true,
  "noUnusedLocals":false,
  "target": "es2017",
  "sourceMap": true,
  "outDir": "./dist",
  "baseUrl": "./",
  "incremental": true,
  "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
  }
  